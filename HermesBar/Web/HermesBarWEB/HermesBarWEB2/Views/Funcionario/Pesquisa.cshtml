@using System.Data.SqlTypes;
@model List<MODEL.Employee.EmployeeModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="/Scripts/bootstrap/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
<link rel="stylesheet" href="/Scripts/plugins/datatables/dataTables.bootstrap.css">
<link rel="stylesheet" href="/Scripts/dist/css/AdminLTE.min.css">
<link rel="stylesheet" href="/Scripts/dist/css/skins/_all-skins.min.css">

<div class="content-wrapper">
    <section class="content-header">
        <h1>
            Funcionários
            <small>pesquisar</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Funcionários</a></li>
            <li class="active">Pesquisa</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <!-- /.box -->
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Pesquisa de funcionários</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>Código</th>
                                    <th>Nome</th>
                                    <th>Contratação</th>
                                    <th>Demissão</th>
                                    <th>Tipo</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    @Html.Hidden("Id", item.Id)
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Contato.Nome</td>
                                        <td>@item.DataAdmissao.ToShortDateString()</td>
                                        @if (item.DataDemissao == SqlDateTime.MinValue)
                                        {
                                            <td>Funcionário em período funcional</td>
                                        }
                                        else
                                        {
                                            <td>@item.DataDemissao.ToShortDateString()</td>
                                        }
                                        <td>@item.TipoSelected</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Código</th>
                                    <th>Nome</th>
                                    <th>Contratação</th>
                                    <th>Demissão</th>
                                    <th>Tipo</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<script src="/Scripts/plugins/jQuery/jQuery-2.1.4.min.js"></script>
<script src="/Scripts/bootstrap/js/bootstrap.min.js"></script>
<script src="/Scripts/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="/Scripts/plugins/datatables/dataTables.bootstrap.min.js"></script>
<script src="/Scripts/plugins/slimScroll/jquery.slimscroll.min.js"></script>
<script src="/Scripts/plugins/fastclick/fastclick.js"></script>
<script src="/Scripts/dist/js/app.min.js"></script>
<script src="/Scripts/dist/js/demo.js"></script>

<script>
    $("#example1").DataTable();
</script>