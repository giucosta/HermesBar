<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header"><i class="fa fa fa-bars"></i>Estabelecimento</h3>
                <ol class="breadcrumb">
                    <li><i class="fa fa-home"></i><a href="/Home/Index">Home</a></li>
                    <li><i class="icon_document_alt"></i><a href="/Estabelecimento/Configuracoes">Configurações do Estabelecimento</a></li>
                </ol>
            </div>
        </div>
        @Html.ActionLink("Novo", "Cadastrar", "Estabelecimento", new { @class = "btn btn-primary tooltips", @data_toggle = "tooltip", @data_original_title = "Clique para cadastrar um novo estabelecimento/filial" })
    </section>
    <div class="col-md-12">
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <div id="c-slide" class="carousel slide auto panel-body">
                        <ol class="carousel-indicators out">
                            <li class="" data-slide-to="0" data-target="#c-slide"></li>
                            <li class="active" data-slide-to="1" data-target="#c-slide"></li>
                            <li class="" data-slide-to="2" data-target="#c-slide"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="item text-center">
                                <h3>Cadastre um estabelecimento</h3>
                                <small class="">Estas informações serão úteis durante todo o processo</small>
                            </div>
                            <div class="item text-center active">
                                <h3><i class="icon_plus_alt2"></i> Clique para editar</h3>
                                <small class="">Edite as informações de seu estabelecimento sempre que desejar</small>
                            </div>
                            <div class="item text-center">
                                <h3>Para mais informações</h3>
                                <small class="">Acesse a documentação do sistema</small>
                            </div>
                        </div>
                        <a data-slide="prev" href="#c-slide" class="left carousel-control">
                            <i class="arrow_carrot-left_alt2"></i>
                        </a>
                        <a data-slide="next" href="#c-slide" class="right carousel-control">
                            <i class="arrow_carrot-right_alt2"></i>
                        </a>
                    </div>
                </section>
    <section class="panel">
        <header class="panel-heading">
            Estabelecimento
        </header>
        <table class="table table-striped table-advance table-hover">
            <tbody>
                <tr>
                    <th><i class="icon_profile"></i> Razão Social</th>
                    <th><i class="icon_mail_alt"></i> Fantasia</th>
                    <th><i class="icon_pin_alt"></i> E-mail</th>
                    <th><i class="icon_mobile"></i> Contato</th>
                    <th><i class="icon_cogs"></i> Ação</th>
                </tr>

                @foreach (var item in Model)
                {
                    @Html.Hidden("Id", item.Id)
                    <tr>
                        <td>@item.RazaoSocial</td>
                        <td>@item.NomeFantasia</td>
                        <td>@item.Contato.Email</td>
                        <td>@item.Contato.Nome</td>
                        <td>
                            <div class="btn-group">
                                <a class="btn btn-primary popovers" data-original-title="Editar" data-content="Clique para editar as informações do estabelecimento" data-placement="top" data-trigger="hover" href="@urlEdit + @item.Id"><i class="icon_plus_alt2"></i></a>
                                <a class="btn btn-success" href="#" disabled="disabled"><i class="icon_check_alt2"></i></a>
                                <a class="btn btn-danger" href="#" disabled="disabled"><i class="icon_close_alt2"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </section>

</section>

