@model List<MODEL.ListaCompras.ListaComprasModel>
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Hermes Bar - Lista de Compas</title>
    @Styles.Render("~/content/bootstrap")
    @Styles.Render("~/content/bootstrap-theme")
    @Styles.Render("~/content/elegante-icons")
    @Styles.Render("~/content/font-awesome")
    @Styles.Render("~/content/style")
    @Styles.Render("~/content/responsive")
    @Styles.Render("~/content/sweetalert")
    @Styles.Render("~/content/calendar")
</head>
<body>
    <div class="col-md-12">
        <br />
        <section>
            <div class="row">
                <div class="col-md-12">
                        <section class="panel">
                            <header class="panel-heading">
                                <h3>Lista de Compras</h3>
                            </header>
                            <div class="panel-body">
                                <div class="panel-group m-bot20" id="accordion">
                                    @foreach (var item in Model)
                                    {
                                        @Html.HiddenFor(m => item.IdLista)
                                        <div class="panel panel-default">
                                            <div class="panel-heading">
                                                <h4 class="panel-title">
                                                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#@item.id">
                                                        @item.ProdutoNome
                                                    </a>
                                                </h4>
                                            </div>
                                            <div id="@item.id" class="panel-collapse collapse">
                                                <div class="panel-body">
                                                    <div class="form-group">
                                                        <label class="control-label col-sm-2">Quantidade</label>
                                                        <div class="col-sm-10">
                                                            @Html.TextBoxFor(m => item.quantidade, new { @class = "form-control", @required = "required" })
                                                            @Html.HiddenFor(m => item.id)
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="control-label col-sm-2">Valor Unidade</label>
                                                        <div class="col-sm-10">
                                                            <input type="text" class="form-control" id="valor-compra"/>
                                                        </div>
                                                    </div>
                                                    <button class="btn btn-primary" id="produto-comprado">Adicionar Produto</button>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </section>
                        <button type="button" class="btn btn-primary" id="fechar-pedido">Concluir  pedido</button>
                </div>
            </div>
        </section>
    </div>
</body>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/scrollTo")
@Scripts.Render("~/bundles/niceScroll")
@Scripts.Render("~/bundles/jqueryMask")
@Scripts.Render("~/bundles/scripts")
@Scripts.Render("~/bundles/sweetalert")
<script src="~/Scripts/moment.min.js"></script>
@*@Scripts.Render("~/bundles/moment")*@
@Scripts.Render("~/bundles/calendar")
<script src="~/Scripts/lang-all.js"></script>
@Scripts.Render("~/bundles/hma")
<script>
    if ($(".custom-custom-bar-chart")) {
        $(".bar").each(function () {
            var i = jQuery(this).find(".value").html();
            $(this).find(".value").html("");
            $(this).find(".value").animate({
                height: i
            }, 2000)
        })
    }
</script>
</html>
