@model List<MODEL.ListaCompras.ListaComprasModel>
@{
    ViewBag.Title = "Hermes Bar WEB";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string urlIniciar = "/ListaCompras/IniciarCompra?Id=";
}
<!--Necessário para o sweet-->
@Scripts.Render("~/bundles/jquery");
@Scripts.Render("~/bundles/sweetalert");
@Styles.Render("~/content/sweetalert")
<!--Necessário para o sweet-->

<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header"><i class="fa fa fa-bars"></i>Lista de Compras</h3>
                <ol class="breadcrumb">
                    <li><i class="fa fa-home"></i><a href="/Home/Index">Home</a></li>
                    <li><i class="icon_document_alt"></i><a href="/ListaCompras/Get">Lista de Compras</a></li>
                </ol>
            </div>
        </div>
        @Html.ActionLink("Novo", "CriarLista", "ListaCompras", new { @class = "btn btn-primary tooltips", @data_toggle = "tooltip", @data_original_title = "Clique para cadastrar uma nova lista de compras" })
    </section>
    <div class="col-md-12">
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <div id="c-slide" class="carousel slide auto panel-body">
                        <ol class="carousel-indicators out">
                            <li class="" data-slide-to="0" data-target="#c-slide"></li>
                            <li class="active" data-slide-to="1" data-target="#c-slide"></li>
                            <li class="" data-slide-to="2" data-target="#c-slide"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="item text-center">
                                <h3>Crie uma lista de compras</h3>
                                <small class="">Ao concluir as compras, o seu estoque será automaticamente atualizado</small>
                            </div>
                            <div class="item text-center active">
                                <h3><i class="icon_plus_alt2"></i> Clique para iniciar as compras</h3>
                                <small class="">Clique em (+) para iniciar as compras</small>
                            </div>
                            <div class="item text-center">
                                <h3>Para mais informações</h3>
                                <small class="">Acesse a documentação do sistema</small>
                            </div>
                        </div>
                        <a data-slide="prev" href="#c-slide" class="left carousel-control">
                            <i class="arrow_carrot-left_alt2"></i>
                        </a>
                        <a data-slide="next" href="#c-slide" class="right carousel-control">
                            <i class="arrow_carrot-right_alt2"></i>
                        </a>
                    </div>
                </section>
                <section class="panel">
                    <header class="panel-heading">
                        Lista de Compras
                    </header>
                    <table class="table table-striped table-advance table-hover">
                        <tbody>
                            <tr>
                                <th><i class="icon_profile"></i>Código da Lista</th>
                                <th><i class="icon_mail_alt"></i> Data Emissão</th>
                                <th><i class="icon_cogs"></i>Ação</th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.IdLista</td>
                                    <td>@item.DataCriacao.ToShortDateString()</td>
                                    <td>
                                        <a class="btn btn-primary popovers" data-original-title="Iniciar" data-content="Clique para iniciar as compras" data-placement="top" data-trigger="hover" href="@urlIniciar + @item.IdLista"><i class="icon_plus_alt2"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </section>
            </div>
        </div>
    </div>
</section>

