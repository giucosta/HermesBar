@{
    ViewBag.Title = "Hermes Bar PDV";
    Layout = "~/Views/Shared/_LayoutPdv.cshtml";
}
<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header"><i class="fa fa fa-bars"></i>Cliente</h3>
                <ol class="breadcrumb">
                    <li><i class="fa fa-home"></i><a href="/Pdv/Index">Home</a></li>
                    <li><i class="icon_document_alt"></i><a href="/Pdv/SaidaCliente">Saída Cliente</a></li>
                </ol>
            </div>
        </div>
    </section>
    <div class="col-md-12">
        <section>
            <div class="row">
                <div class="col-md-12">
                    <form class="form-horizontal">
                        <section class="panel">
                            <header class="panel-heading">
                                Saída Cliente
                            </header>
                            <div class="panel-body">

                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Número Cartão</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="saida-cartao-cliente" placeholder="Insira o número do cartão" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Nome</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="saida-nome-cliente" placeholder="Nome do Cliente" disabled="disabled" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Valor Total</label>
                                    <div class="col-sm-4">
                                        <textarea class="form-control" id="saida-total-cliente" placeholder="Valor total" style="font-size:18px;"></textarea>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Forma de Pagamento</label>
                                    <div class="col-sm-10">
                                        <button type="button" class="btn btn-default">Cartão Crédito</button>
                                        <button type="button" class="btn btn-default">Cartão Débito</button>
                                        <button type="button" class="btn btn-default">Dinheiro</button>
                                        <button type="button" class="btn btn-default">Cheque</button>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Valor Recebido</label>
                                    <div class="col-sm-4">
                                        <textarea class="form-control" placeholder="Valor Recebido" style="font-size:18px;"></textarea>
                                    </div>
                                    <label class="col-sm-2 control-label">Troco</label>
                                    <div class="col-sm-4">
                                        <textarea class="form-control" placeholder="Troco" style="font-size:18px;"></textarea>
                                    </div>
                                </div>
                            </div>
                        </section>
                        <button type="button" class="btn btn-primary" id="saida-registrar-cliente">Registrar Saída</button>
                        <button type="button" class="btn btn-default" id="saida-registrar-cliente">Imprimir Cupom</button>
                    </form>
                </div>
            </div>
        </section>
    </div>
</section>
