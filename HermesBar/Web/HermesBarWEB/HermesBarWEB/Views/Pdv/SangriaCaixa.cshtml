@{
    ViewBag.Title = "Hermes Bar PDV";
    Layout = "~/Views/Shared/_LayoutPdv.cshtml";
}
<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header"><i class="fa fa fa-bars"></i>Caixa</h3>
                <ol class="breadcrumb">
                    <li><i class="fa fa-home"></i><a href="/Pdv/Index">Home</a></li>
                    <li><i class="icon_document_alt"></i><a href="/Pdv/SangriaCaixa">Sangria Caixa</a></li>
                </ol>
            </div>
        </div>
    </section>
    <div class="col-md-12">
        <section>
            <div class="row">
                <div class="col-md-12">
                    <form class="form-horizontal">
                        <section class="panel">
                            <header class="panel-heading">
                                Sangria Caixa
                            </header>
                            <div class="panel-body">
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Valor Sangria</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" id="sangria-valor-caixa" placeholder="Insira o valor da sangria" required="required" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Motivo</label>
                                    <div class="col-sm-10">
                                        <textarea id="motivo-sangria-caixa" class="form-control" required="required" placeholder="Insira o motivo da sangria"></textarea>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">Data da sangria</label>
                                    <div class="col-sm-10">
                                        <input type="datetime" id="data-sangria-caixa" class="form-control" disabled="disabled" />
                                    </div>
                                </div>
                            </div>
                        </section>
                        <button type="button" class="btn btn-primary" id="sangria-caixa">Efetua Sangria Caixa</button>
                    </form>
                </div>
            </div>
        </section>
    </div>
</section>
