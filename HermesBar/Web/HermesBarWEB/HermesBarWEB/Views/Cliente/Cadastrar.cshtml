@model MODEL.Client.ClientModel
@{
    ViewBag.Title = "Hermes Bar WEB";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--Necessário para o sweet-->
@Scripts.Render("~/bundles/jquery");
@Scripts.Render("~/bundles/sweetalert");
@Styles.Render("~/content/sweetalert")
<!--Necessário para o sweet-->
@if (ViewBag.InsertError != null)
{
    <script type="text/javascript">
        swal("Oops!", "Erro ao cadastrar cliente!", "error");
    </script>
}
@if (ViewBag.UpdateError != null)
{
    <script type="text/javascript">
        swal("Oops!", "Erro ao editar cliente!", "error");
    </script>
}
@if (ViewBag.RgCadastrado != null)
{
    <script type="text/javascript">
        swal("Oops!", "Cliente já cadastrado com o mesmo RG!", "error");
    </script>
}
<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header"><i class="fa fa fa-bars"></i>Clientes</h3>
                <ol class="breadcrumb">
                    <li><i class="fa fa-home"></i><a href="/Home/Index">Home</a></li>
                    <li><i class="icon_document_alt"></i><a href="/Cliente/Get">Clientes</a></li>
                    <li><i class="icon_document_alt"></i><a href="/Cliente/Cadastrar">Cadastro de Clientes</a></li>
                </ol>
            </div>
        </div>
    </section>
    <div class="col-md-12">
        <section>
            <div class="row">
                <div class="col-md-12">
                    @using (Html.BeginForm("CadastrarCliente", "Cliente", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        @Html.HiddenFor(m => m.Id)
                        <section class="panel">
                            <header class="panel-heading">
                                Cadastro de Clientes
                            </header>
                            <div class="panel-body">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Matriz, new { @class = "col-sm-2 control-label" })
                                    <div class="col-sm-10">
                                        @Html.DropDownListFor(m => m.MatrizSelected, Model.Matriz, "Selecione", new { @class="form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.RG, new { @class = "col-sm-2 control-label" })
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(m => m.RG, new { @class = "form-control", @placeholder = "Insira o RG", @required = "required" })
                                    </div>
                                    <div class="col-sm-2">
                                        @Html.DropDownListFor(m => m.StatusSelected, Model.Status, "Selecione", new { @class = "form-control", @required = "required" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.DataNascimento, new { @class = "col-sm-2 control-label" })
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(m => m.DataNascimento, new { @class = "form-control", @type="date", @placeholder = "Insira a data de nascimento", @required = "required" })
                                    </div>
                                </div>
                            </div>
                        </section>
                        @Html.Partial("~/Views/Partials/ContatoPartial.cshtml", Model.Contato)
                        @Html.Partial("~/Views/Partials/SalvarVoltarPartial.cshtml")
                    }
                </div>
            </div>
        </section>
    </div>
</section>