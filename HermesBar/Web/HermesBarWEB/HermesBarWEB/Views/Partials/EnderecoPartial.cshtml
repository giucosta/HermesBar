@model MODEL.Address.EnderecoModel
<section class="panel">
    <header class="panel-heading">
        Endereço
    </header>
    <div class="panel-body">
        <div class="form-group">
            @Html.LabelFor(m => m.Cep, new { @class="col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Cep, new { @class = "form-control", @placeholder = "Insira o CEP", @required = "required" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Rua, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Rua, new { @class = "form-control", @placeholder = "Insira a rua", @required = "required" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Numero, new { @class="col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Numero, new { @class = "form-control round-input", @placeholder = "Insira o número", @required = "required" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Complemento, new { @class="col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Complemento, new { @class="form-control",@placeholder="Insira o complemento" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Bairro, new { @class="col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Bairro, new { @class = "form-control", @placeholder = "Insira o bairro", @required = "required" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Uf, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.DropDownListFor(m => m.UfSelected, Model.UfList, new { @class = "form-control", @required = "required" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Cidade, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(m => m.Cidade, new { @class = "form-control", @placeholder = "Insira a cidade", @required = "required" })
            </div>
        </div>
    </div>
</section>