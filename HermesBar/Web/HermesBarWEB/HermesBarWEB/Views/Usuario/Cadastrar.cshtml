@model MODEL.User.UsuarioModel
@{
    ViewBag.Title = "Hermes Bar WEB";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--Necessário para o sweet-->
@Scripts.Render("~/bundles/jquery");
@Scripts.Render("~/bundles/sweetalert");
@Styles.Render("~/content/sweetalert")
<!--Necessário para o sweet-->
@if (ViewBag.InsertError != null)
{
    <script type="text/javascript">
        swal("Oops!", "Erro ao cadastrar usuário!", "error");
    </script>
}
@if (ViewBag.UpdateError != null)
{
    <script type="text/javascript">
        swal("Oops!", "Erro ao editar usuário!", "error");
    </script>
}

<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header"><i class="fa fa fa-bars"></i>Usuários</h3>
                <ol class="breadcrumb">
                    <li><i class="fa fa-home"></i><a href="/Home/Index">Home</a></li>
                    <li><i class="icon_document_alt"></i><a href="/Usuario/Get">Usuário</a></li>
                    <li><i class="icon_document_alt"></i><a href="/Usuario/Cadastrar">Cadastro</a></li>
                </ol>
            </div>
        </div>
    </section>
    <div class="col-md-12">
        <section>
            <div class="row">
                <div class="col-md-12">
                    @using (Html.BeginForm("CadastrarUsuario", "Usuario", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        @Html.HiddenFor(m => m.Id)
                        <section class="panel">
                            <header class="panel-heading">
                                Cadastro de Usuários
                            </header>
                            <div class="panel-body">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Matriz, new { @class="col-sm-2 control-label" })
                                    <div class="col-sm-10">
                                        @Html.DropDownListFor(m => m.MatrizSelected, Model.Matriz, "Selecione", new { @class="form-control" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Nome, new { @class = "col-sm-2 control-label" })
                                    <div class="col-sm-4">
                                        @Html.TextBoxFor(m => m.Nome, new { @class="form-control",@required="required", @placeholder="Insira o nome do usuário"})
                                    </div>
                                    @Html.LabelFor(m => m.Status, new { @class = "col-sm-2 control-label" })
                                    <div class="col-sm-4">
                                        @Html.DropDownListFor(m => m.StatusSelected, Model.Status, "Selecione", new { @class = "form-control", @required = "required" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Email, new { @class="col-sm-2 control-label" })
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(m => m.Email, new { @class="form-control", @placeholder="Insira o e-mail do usuário" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Perfil, new { @class="col-sm-2 control-label" })
                                    <div class="col-sm-4">
                                        @Html.DropDownListFor(m => m.PerfilSelected, Model.Perfil, "Selecione", new { @class="form-control",@required="required" })
                                    </div>
                                    @Html.LabelFor(m => m.Senha, new { @class="col-sm-2 control-label" })
                                    <div class="col-sm-4">
                                        @Html.PasswordFor(m => m.Senha, new { @class = "form-control", @required = "required", @placeholder = "Insira a senha do usuário" })
                                        <span class="help-block">A senha será trocada no primeiro acesso</span>
                                    </div>
                                </div>
                            </div>
                        </section>
                        @Html.Partial("~/Views/Partials/SalvarVoltarPartial.cshtml")
                    }
                </div>
            </div>
        </section>
    </div>
</section>