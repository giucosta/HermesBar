@model List<MODEL.Product.ProdutoModel>
@{
    ViewBag.Title = "Hermes Bar WEB";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string urlEdit = "/Produto/GetId?Id=";
    string urlActive = "/Produto/ActiveId?Id=";
    string urlInactive = "/Produto/InactiveId?Id=";
}
<!--Necessário para o sweet-->
@Scripts.Render("~/bundles/jquery");
@Scripts.Render("~/bundles/sweetalert");
@Styles.Render("~/content/sweetalert")
<!--Necessário para o sweet-->
@if (ViewBag.InsertSuccess != null)
{
    <script type="text/javascript">
        swal("Legal!", "Produto cadastrado com sucesso", "success");
    </script>
}
@if (ViewBag.UpdateSuccess != null)
{
    <script type="text/javascript">
        swal("Legal!", "Produto editado com sucesso", "success");
    </script>
}
@if (ViewBag.ActiveSuccess != null)
{
    <script type="text/javascript">
        swal("Legal!", "Produto ativado com sucesso", "success");
    </script>
}
@if (ViewBag.ActiveError != null)
{
    <script type="text/javascript">
        swal("Ooops!", "Erro ao ativar produto", "error");
    </script>
}
@if (ViewBag.InactiveSuccess != null)
{
    <script type="text/javascript">
        swal("Legal!", "Produto inativado com sucesso", "success");
    </script>
}
@if (ViewBag.InactiveError != null)
{
    <script type="text/javascript">
        swal("Ooops!", "Erro ao inativar produto", "error");
    </script>
}
<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header"><i class="fa fa fa-bars"></i>Produtos</h3>
                <ol class="breadcrumb">
                    <li><i class="fa fa-home"></i><a href="/Home/Index">Home</a></li>
                    <li><i class="icon_document_alt"></i><a href="/Produto/Get">Produtos</a></li>
                </ol>
            </div>
        </div>
        @Html.ActionLink("Novo", "Cadastrar", "Produto", new { @class = "btn btn-primary" })
    </section>
    <div class="col-md-12">
        <div class="row">
            <section class="panel">
                <div class="panel-body">
                    @*<button title="" data-placement="top" data-toggle="tooltip" class="btn btn-default tooltips" type="button" data-original-title="Clique para cadastrar um novo produto">Novo</button>*@
                    <a href="/Tipo/Get" data-placement="top" data-toggle="tooltip" class="btn btn-default tooltips" data-original-title="Clique para cadastrar um novo tipo">Tipo</a>
                    @*<button href="/Tipo/Get" title="" data-placement="top" data-toggle="tooltip" class="btn btn-default tooltips" type="button" data-original-title="Clique para cadastrar um novo tipo">Tipo</button>*@
                    @*<button title="" data-placement="top" data-toggle="tooltip" class="btn btn-default tooltips" type="button" data-original-title="Clique para cadastrar uma nova categoria">Categoria</button>*@
                </div>
            </section>

            <div class="col-lg-12">
                <section class="panel">
                    <div id="c-slide" class="carousel slide auto panel-body">
                        <ol class="carousel-indicators out">
                            <li class="" data-slide-to="0" data-target="#c-slide"></li>
                            <li class="active" data-slide-to="1" data-target="#c-slide"></li>
                            <li class="" data-slide-to="2" data-target="#c-slide"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="item text-center">
                                <h3>Cadastre um produto</h3>
                                <small class="">Estas informações serão úteis na hora da emissão do pedido</small>
                            </div>
                            <div class="item text-center active">
                                <h3><i class="icon_plus_alt2"></i> Clique para editar</h3>
                                <small class="">Edite as informações do seu produto sempre que desejar</small>
                            </div>
                            <div class="item text-center">
                                <h3>Para mais informações</h3>
                                <small class="">Acesse a documentação do sistema</small>
                            </div>
                        </div>
                        <a data-slide="prev" href="#c-slide" class="left carousel-control">
                            <i class="arrow_carrot-left_alt2"></i>
                        </a>
                        <a data-slide="next" href="#c-slide" class="right carousel-control">
                            <i class="arrow_carrot-right_alt2"></i>
                        </a>
                    </div>
                </section>
                <section class="panel">
                    <header class="panel-heading">
                        Produtos
                    </header>
                    <table class="table table-striped table-advance table-hover">
                        <tbody>
                            <tr>
                                <th><i class="icon_profile"></i> Nome</th>
                                <th><i class="icon_mail_alt"></i> Descrição</th>
                                <th><i class="icon_pin_alt"></i> Tipo</th>
                                <th><i class="icon_mobile"></i> Categoria</th>
                                <th><i class="icon_cogs"></i> Ação</th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                @Html.Hidden("Id", item.Id)
                                <tr>
                                    <td>@item.Nome</td>
                                    <td>@item.Descricao</td>
                                    <td>@item.TipoSelected</td>
                                    <td>@item.UnidadeMedidaSelected</td>
                                    <td>
                                        <div class="btn-group">
                                            <a class="btn btn-primary popovers" data-original-title="Editar" data-content="Clique para editar as informações do produto" data-placement="top" data-trigger="hover" href="@urlEdit + @item.Id"><i class="icon_plus_alt2"></i></a>
                                            @if (item.StatusSelected == "1")
                                            {
                                                <a class="btn btn-success popovers" data-original-title="Ativar" data-content="Clique para ativar a utilização do produto" data-placement="top" data-trigger="hover" href="@urlActive + @item.Id" disabled="disabled"><i class="icon_check_alt2"></i></a>
                                                <a class="btn btn-danger popovers" data-original-title="Inativar" data-content="Clique para inativar o produto" data-placement="top" data-trigger="hover" href="@urlInactive + @item.Id"><i class="icon_close_alt2"></i></a>
                                            }
                                            else
                                            {
                                                <a class="btn btn-success popovers" data-original-title="Ativar" data-content="Clique para ativar a utilização do produto" data-placement="top" data-trigger="hover" href="@urlActive + @item.Id"><i class="icon_check_alt2"></i></a>
                                                <a class="btn btn-danger" href="@urlInactive + @item.Id" disabled="disabled"><i class="icon_close_alt2"></i></a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </section>
            </div>
        </div>
    </div>
</section>
