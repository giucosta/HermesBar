@model List<MODEL.Supplier.FornecedorModel>
@{
    ViewBag.Title = "Hermes Bar WEB";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string urlEdit = "/Fornecedor/GetId?Id=";
}
<!--Necessário para o sweet-->
@Scripts.Render("~/bundles/jquery");
@Scripts.Render("~/bundles/sweetalert");
@Styles.Render("~/content/sweetalert")
<!--Necessário para o sweet-->
@if (ViewBag.Sucesso)
{
    <script type="text/javascript">
        swal("Uhul!", "Fornecedor cadastrado com sucesso!", "success");
    </script>
}
<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header"><i class="fa fa fa-bars"></i>Fornecedores</h3>
                <ol class="breadcrumb">
                    <li><i class="fa fa-home"></i><a href="/Home/Index">Home</a></li>
                    <li><i class="icon_document_alt"></i><a href="/Fornecedor/Get">Fornecedor</a></li>
                </ol>
            </div>
        </div>
        @Html.ActionLink("Novo", "Cadastrar", "Fornecedor", new { @class = "btn btn-primary tooltips", @data_toggle = "tooltip", @data_original_title = "Clique para cadastrar um novo fornecedor" })
    </section>
    <div class="col-md-12">
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <div id="c-slide" class="carousel slide auto panel-body">
                        <ol class="carousel-indicators out">
                            <li class="" data-slide-to="0" data-target="#c-slide"></li>
                            <li class="active" data-slide-to="1" data-target="#c-slide"></li>
                            <li class="" data-slide-to="2" data-target="#c-slide"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="item text-center">
                                <h3>Cadastre um fornecedor</h3>
                                <small class="">Estas informações serão úteis na hora de cadastrar o produto</small>
                            </div>
                            <div class="item text-center active">
                                <h3><i class="icon_plus_alt2"></i> Clique para editar</h3>
                                <small class="">Edite as informações do seu fornecedor sempre que desejar</small>
                            </div>
                            <div class="item text-center">
                                <h3>Para mais informações</h3>
                                <small class="">Acesse a documentação do sistema</small>
                            </div>
                        </div>
                        <a data-slide="prev" href="#c-slide" class="left carousel-control">
                            <i class="arrow_carrot-left_alt2"></i>
                        </a>
                        <a data-slide="next" href="#c-slide" class="right carousel-control">
                            <i class="arrow_carrot-right_alt2"></i>
                        </a>
                    </div>
                </section>
                <section class="panel">
                    <header class="panel-heading">
                        Fornecedores
                    </header>
                    <table class="table table-striped table-advance table-hover">
                        <tbody>
                            <tr>
                                <th><i class="icon_profile"></i> Razão Social</th>
                                <th><i class="icon_mail_alt"></i> E-mail</th>
                                <th><i class="icon_pin_alt"></i> Cidade</th>
                                <th><i class="icon_mobile"></i> Celular</th>
                                <th><i class="icon_cogs"></i> Ação</th>
                            </tr>

                            @foreach (var item in Model)
                            {
                                @Html.Hidden("Id", item.Id)
                                <tr>
                                    <td>@item.RazaoSocial</td>
                                    <td>@item.Contato.Email</td>
                                    <td>@item.Endereco.Cidade</td>
                                    <td>@item.Contato.Telefone</td>
                                    <td>
                                        <div class="btn-group">
                                            <a class="btn btn-primary popovers" data-original-title="Editar" data-content="Clique para editar as informações do fornecedor" data-placement="top" data-trigger="hover" href="@urlEdit + @item.Id"><i class="icon_plus_alt2"></i></a>
                                            <a class="btn btn-success" href="#" disabled="disabled"><i class="icon_check_alt2"></i></a>
                                            <a class="btn btn-danger" href="#" disabled="disabled"><i class="icon_close_alt2"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </section>
            </div>
        </div>
    </div>
</section>
   
