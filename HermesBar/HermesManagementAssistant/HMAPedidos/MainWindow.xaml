                </GroupBox>
                <GroupBox Header="Quantidade" Grid.Row="3" Grid.Column="2" FontWeight="Bold">
                    <TextBox Name="tbQuantidade" BorderBrush="Transparent" TextAlignment="Right" FontSize="30" KeyDown="MascaraQuantidade"/>
                </GroupBox>
                <GroupBox Header="Observação" Grid.Row="3" Grid.Column="3" FontWeight="Bold">
                    <TextBox Name="tbObservacao" BorderBrush="Transparent" TextAlignment="Right" FontSize="30"/>
                </GroupBox>
                <Button Name="btSalvar" Content="Salvar" Grid.Row="1" Grid.Column="3" FontWeight="Bold" Width="190" Height="40" VerticalAlignment="Top" Margin="0,10,0,0"/>
