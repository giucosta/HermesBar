                <DataGrid Name="dgPedidos" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="4" Margin="0,0,-119,0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Cód Produto"/>
                        <DataGridTextColumn Header="Quantidade"/>
                        <DataGridTextColumn Header="Observação"/>
