@{
    ViewBag.Title = "Hermes Bar WEB";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string urlEdit = "/Fornecedor/GetId?Id=";
}
<!--Necessário para o sweet-->
@Scripts.Render("~/bundles/jquery");
@Scripts.Render("~/bundles/sweetalert");
@Styles.Render("~/content/sweetalert")
<!--Necessário para o sweet-->
@if (ViewBag.Sucesso != null)
{
    <script type="text/javascript">
        swal("Uhul!", "Fornecedor cadastrado com sucesso!", "success");
    </script>
}
<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header"><i class="fa fa fa-bars"></i>Estoque</h3>
                <ol class="breadcrumb">
                    <li><i class="fa fa-home"></i><a href="/Home/Index">Home</a></li>
                    <li><i class="icon_document_alt"></i><a href="/Estoque/Consultar">Movimentação de Produtos</a></li>
                </ol>
            </div>
        </div>
    </section>
    <div class="col-md-12">
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <div id="c-slide" class="carousel slide auto panel-body">
                        <ol class="carousel-indicators out">
                            <li class="" data-slide-to="0" data-target="#c-slide"></li>
                            <li class="active" data-slide-to="1" data-target="#c-slide"></li>
                            <li class="" data-slide-to="2" data-target="#c-slide"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="item text-center">
                                <h3> Verifique seu estoque</h3>
                                <small class="">Efetua a consulta de seu estoque sempre que desejar</small>
                            </div>
                            <div class="item text-center active">
                                <h3><i class="icon_plus_alt2"></i> Efetue movimentações</h3>
                                <small class="">Efetue movimentações sempre que desejar</small>
                            </div>
                            <div class="item text-center">
                                <h3>Para mais informações</h3>
                                <small class="">Acesse a documentação do sistema</small>
                            </div>
                        </div>
                        <a data-slide="prev" href="#c-slide" class="left carousel-control">
                            <i class="arrow_carrot-left_alt2"></i>
                        </a>
                        <a data-slide="next" href="#c-slide" class="right carousel-control">
                            <i class="arrow_carrot-right_alt2"></i>
                        </a>
                    </div>
                </section>
                <section class="panel">
                    <header class="panel-heading">
                        Novo
                    </header>
                    <div class="panel-body">
                        <form class="form-inline">
                            <div class="form-group">
                                <button type="button" class="btn btn-primary popovers" data-original-title="Novo" data-content="Clique para adicionar nova movimentação" data-placement="top" data-trigger="hover">Nova movimentação</button>
                            </div>
                        </form>
                    </div>
                </section>
                <section class="panel">
                    <header class="panel-heading">
                        Filtros
                    </header>
                    <div class="panel-body">
                        <form class="form-inline">
                            <div class="form-group">
                                <label class="control-label">Data Inicial</label>
                                <input type="date" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label class="control-label">Data Final</label>
                                <input type="date" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label class="control-label">Produto</label>
                                <select class="form-control">
                                    <option>Selecione</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Colaborador</label>
                                <select class="form-control">
                                    <option>Selecione</option>
                                </select>
                            </div>
                            <div class="form-group"><div class="col-sm-2"></div></div>
                            <button type="button" class="btn btn-primary popovers" data-original-title="Filtrar" data-content="Clique para filtrar o relatório conforme as seleções" data-placement="top" data-trigger="hover">Filtrar</button>
                            <button type="button" class="btn btn-default popovers" data-original-title="Limpar" data-content="Clique para limpar os filtros e as informações iniciais" data-placement="top" data-trigger="hover">Limpar</button>
                        </form>
                    </div>
                </section>
                <section class="panel">
                    <header class="panel-heading">
                        Estoque
                    </header>
                    <table class="table table-striped table-advance table-hover">
                        <tbody>
                            <tr>
                                <th><i class="icon_profile"></i> Data</th>
                                <th><i class="icon_mail_alt"></i> Produto</th>
                                <th><i class="icon_pin_alt"></i> Entrada/Saída</th>
                                <th><i class="icon_mobile"></i> Quantidade</th>
                                <th><i class="icon_mobile"></i> Valor</th>
                                <th><i class="icon_mobile"></i> Colaborador</th>
                                <th><i class="icon_cogs"></i> Ação</th>
                            </tr>
                            <tr>
                                <td>@DateTime.Now.ToShortDateString()</td>
                                <td>Coca-Cola Lata</td>
                                <td>Saída</td>
                                <td>1</td>
                                <td>R$4,00</td>
                                <td>Giuliano</td>
                                <td>
                                    <div class="btn-group">
                                        <a class="btn btn-primary popovers" data-original-title="Editar" data-content="Clique para editar as informações do fornecedor" data-placement="top" data-trigger="hover" href="@urlEdit"><i class="icon_plus_alt2"></i></a>
                                        <a class="btn btn-success" href="#" disabled="disabled"><i class="icon_check_alt2"></i></a>
                                        <a class="btn btn-danger" href="#" disabled="disabled"><i class="icon_close_alt2"></i></a>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </section>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Exportar
                    </header>
                    <div class="panel-body">
                        <div class="btn-group">
                            <button type="button" class="btn btn-default popovers" data-original-title="Exportar" data-content="Clique para exportar para .PDF" data-placement="top" data-trigger="hover">PDF</button>
                            <button type="button" class="btn btn-default popovers" data-original-title="Exportar" data-content="Clique para exportar para .XLST" data-placement="top" data-trigger="hover">EXCEL</button>
                            <button type="button" class="btn btn-default popovers" data-original-title="Exportar" data-content="Clique para exportar para .XML" data-placement="top" data-trigger="hover">XML</button>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
    
</section>

